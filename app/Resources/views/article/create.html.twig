{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div>

        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_label(form.name, 'Имя') }}
    </div>

    <div>

        {{ form_errors(form.description) }}
        {{ form_widget(form.description , {'attr': {'class': 'task_field'}}) }}
        {{ form_label(form.description, 'Описание') }}
    </div>

    <div>
        {{ form_label(form.created_at, 'Дата создания') }}
        {{ form_errors(form.created_at) }}
        {{ form_widget(form.created_at) }}
    </div>


    <div>
        {{ form_widget(form.submit) }}
        {{ form_label(form.submit , 'Сохранить') }}
        {{ form_widget(form.reset) }}
        {{ form_label (form.reset , 'Отменить') }}
    </div>

    {{ form_end(form) }}



{% endblock %}